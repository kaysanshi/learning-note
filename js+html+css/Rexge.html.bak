		function checkTel(){
			var str=form1.tel.value;//获取字符号码
			var objExp=/^((\d{3}-)?\d{8})$|^((\d{4}-)?\d{7,8})$/;
			if(objExp.test(str)==true){
				alert("你输入的电话合法");
			}else{
				alert("你输入的电话不合法");
			}
		}
	</script>
	</head>
	<body>
		<form name="form1" method="post" action="">
			请输入号码:<input type="text"name="tel"id="tel"/>
				<input name="check" type="button"value="检测"onclick="checkTel()"/>
		</form>
	</body>
</html>