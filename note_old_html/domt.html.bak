<html>
	<head>
		
		<meta http-equiv="content-type" content="text/html;charset=utf-8">
		<title>Dom操作文档</title>
		<script language="javascript">
			function addElement(){
			//创建代表评论人的节点
			var person=document.createTextNode(form1.person.value);
			//创建代表评论人内容的节点;
			var content=document.createTextNode(form1.content.value);
			//创建tr为行标记td为列标记类型的元素节点;
			var td_person=document.createElement("td");
			var td_content=document.createElement("td");
			var tr=document.createElement("tr");
			var tbody=document.createElement("tbody")
			//将TextNode节点加入到td类型的节点里面;
			td_person.appendChild(person);
			td_content.appendChild(content);
			//将td类型的节点添加到tr节点;
			tr.appendChild(td_person);
			tr.appendChild(td_content);
			//把tr追加到tbody末尾;
			tbody.appendChild(tr);
			//获得 table节点并添加tbody
			var mytable=document.getElementById("mytable");
			mytable.appendChild(tbody);
			
			form1.person.value="";//清空上一个
			form1.content.value="";
			
			}
			function deleteFirstE(){
			//获得table对项
				var mytable=document.getElementById("mytable")
				if(mytable.rows.length>1){
					mytable.deleteRow(1);
				}
			}
			function deleteLastE(){
				var mytable=document.getElementById("mytable")
					if(mytable.rows.length>1){
					mytable.deleteRow(mytable.rows.length-1);
				}
			}
		</script>
	</head>
	<body>
		<table id="mytable" width="500" border="1" align="center">
		<tr>
			<td width="20%" align="center">评论人</td>
			<td width="80%" align="center">评论内容</td>
		</tr>
		</table>
		<br/><br/><hr/>
		<div align="center">
			<form name="form1" method="post" action="">
				评论人:<input name="person" type="text" id="person"size="50"></br>
				评论内容:<textarea name="content" cols="60" rows="6" id="content"></textarea>
				</br>
				<input type="button" name="send" value="发表" onclick="addElement()"/>
				<input type="reset" name="reset" value="重置"/>
				<input type="button" name="send" value="删除第一个" onclick="deleteFirstE()"/>
				<input type="reset" name="reset" value="删除最后一个"onclick="deleteLastE()"/>
				<input type="button" name="reset"value="删除第几行">
				<input name="button" type="text" id="person1"size="5">
				
			</form>
		</div>	
	</body>
</html>